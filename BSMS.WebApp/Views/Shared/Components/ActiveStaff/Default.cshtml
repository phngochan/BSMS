@model IEnumerable<BSMS.BusinessObjects.Models.StationStaff>

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white">
        <h6 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>
            Staff đang làm việc (@Model.Count())
        </h6>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var staff in Model)
                {
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    <span class="badge bg-success rounded-pill">
                                        <i class="bi bi-circle-fill" style="font-size:0.5rem;"></i>
                                    </span>
                                    <strong>@staff.User?.FullName</strong>
                                </div>
                                <small class="text-muted d-block">
                                    <i class="bi bi-clock me-1"></i>Ca: @staff.ShiftTimeDisplay
                                </small>
                                @if (staff.TimeRemainingInShift.HasValue)
                                {
                                    <small class="text-success d-block">
                                        <i class="bi bi-hourglass-split me-1"></i>
                                        Còn @staff.TimeRemainingInShift.Value.Hours giờ @staff.TimeRemainingInShift.Value.Minutes phút
                                    </small>
                                }
                            </div>
                            <span class="badge bg-success-subtle text-success-emphasis">Active</span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted py-4">
                <i class="bi bi-moon fs-3 d-block mb-2"></i>
                <p class="mb-0">Không có staff nào đang làm việc</p>
            </div>
        }
    </div>
</div>
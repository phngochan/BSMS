@page
@model BSMS.WebApp.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password - BSMS";
}
<link rel="stylesheet" href="~/css/auth.css" />
<div class="auth-container">
  <div class="pattern-overlay"></div>
  <div class="auth-wrapper">
    <div class="auth-card">
      <h2 class="auth-title">Set a New Password</h2>
      <p class="auth-subtitle">Enter and confirm your new password.</p>
      <form method="post" class="auth-form">
        <div class="form-group">
          <label asp-for="Input.Password" class="form-label">New Password</label>
          <div class="input-wrapper">
            <input asp-for="Input.Password" class="form-input" type="password" placeholder="New password" />
            <button type="button" class="toggle-password" aria-label="Show password" aria-pressed="false">
              <svg class="eye-on" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z"/><circle cx="12" cy="12" r="3"/></svg>
              <svg class="eye-off" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3l18 18"/><path d="M10.58 10.58a2 2 0 102.84 2.84"/><path d="M16.13 16.13C14.86 16.7 13.47 17 12 17 5 17 1 12 1 12a17.5 17.5 0 014.36-4.36"/><path d="M9.9 4.24A10.94 10.94 0 0112 4c7 0 11 8 11 8a18.07 18.07 0 01-3.16 4.19"/></svg>
            </button>
          </div>
          <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>
        <div class="form-group">
          <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
          <div class="input-wrapper">
            <input asp-for="Input.ConfirmPassword" class="form-input" type="password" placeholder="Confirm password" />
            <button type="button" class="toggle-password" aria-label="Show password" aria-pressed="false">
              <svg class="eye-on" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z"/><circle cx="12" cy="12" r="3"/></svg>
              <svg class="eye-off" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3l18 18"/><path d="M10.58 10.58a2 2 0 102.84 2.84"/><path d="M16.13 16.13C14.86 16.7 13.47 17 12 17 5 17 1 12 1 12a17.5 17.5 0 014.36-4.36"/><path d="M9.9 4.24A10.94 10.94 0 0112 4c7 0 11 8 11 8a18.07 18.07 0 01-3.16 4.19"/></svg>
            </button>
          </div>
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>
        <button type="submit" class="auth-button"><span class="button-text">Update Password</span></button>
      </form>
    </div>
  </div>
</div>
@section Scripts {<partial name="_ValidationScriptsPartial" /><script src="~/js/auth-password-toggle.js"></script>}

@page
@model BSMS.WebApp.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register - BSMS";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-container">
    <!-- Background Pattern -->
    <div class="pattern-overlay"></div>

    <div class="auth-wrapper">
        <!-- Register Card -->
        <div class="auth-card">
            <h2 class="auth-title">Create Account</h2>
            <p class="auth-subtitle">Join BSMS and start managing your battery swaps efficiently</p>

            <form method="post" class="auth-form">
                <!-- Username Field -->
                <div class="form-group">
                    <label asp-for="Input.Username" class="form-label">Username</label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Username" class="form-input" placeholder="Choose a username" />
                        <svg class="input-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger small"></span>
                </div>

                <!-- Email Field -->
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Email" class="form-input" type="email" placeholder="your.email@example.com" />
                        <svg class="input-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Full Name Field -->
                <div class="form-group">
                    <label asp-for="Input.FullName" class="form-label">Full Name</label>
                    <div class="input-wrapper">
                        <input asp-for="Input.FullName" class="form-input" placeholder="Your full name" />
                        <svg class="input-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                </div>

                <!-- Phone Field -->
                <div class="form-group">
                    <label asp-for="Input.Phone" class="form-label">Phone Number</label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Phone" class="form-input" type="tel" placeholder="Your phone number" />
                        <svg class="input-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                    </div>
                    <span asp-validation-for="Input.Phone" class="text-danger small"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Password" class="form-input" type="password" placeholder="Create a strong password" />
                        <button type="button" class="toggle-password" aria-label="Show password" aria-pressed="false">
                            <svg class="eye-on" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                            <svg class="eye-off" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 3l18 18"/>
                                <path d="M10.58 10.58a2 2 0 102.84 2.84"/>
                                <path d="M16.13 16.13C14.86 16.7 13.47 17 12 17 5 17 1 12 1 12a17.5 17.5 0 014.36-4.36"/>
                                <path d="M9.9 4.24A10.94 10.94 0 0112 4c7 0 11 8 11 8a18.07 18.07 0 01-3.16 4.19"/>
                            </svg>
                        </button>
                        <svg class="input-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-wrapper">
                        <input asp-for="Input.ConfirmPassword" class="form-input" type="password" placeholder="Confirm your password" />
                        <button type="button" class="toggle-password" aria-label="Show password" aria-pressed="false">
                            <svg class="eye-on" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                            <svg class="eye-off" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 3l18 18"/>
                                <path d="M10.58 10.58a2 2 0 102.84 2.84"/>
                                <path d="M16.13 16.13C14.86 16.7 13.47 17 12 17 5 17 1 12 1 12a17.5 17.5 0 014.36-4.36"/>
                                <path d="M9.9 4.24A10.94 10.94 0 0112 4c7 0 11 8 11 8a18.07 18.07 0 01-3.16 4.19"/>
                            </svg>
                        </button>
                        <svg class="input-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Register Button -->
                <button type="submit" class="auth-button">
                    <span class="button-text">Create Account</span>
                    <svg class="button-icon" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                </button>

                <!-- Divider -->
                <div class="divider">
                    <span class="divider-text">OR</span>
                </div>

                <!-- Login Link -->
                <div class="auth-footer">
                    Already have an account? <a asp-page="/Auth/Login" class="auth-link">Login here</a>
                </div>
            </form>
        </div>

        <!-- Battery Icon Accent -->
        <div class="battery-accent">
            <svg viewBox="0 0 80 120" xmlns="http://www.w3.org/2000/svg">
                <rect x="15" y="20" width="50" height="75" rx="3" fill="none" stroke="#00C853" stroke-width="1.5" opacity="0.3" />
                <rect x="22" y="15" width="10" height="6" fill="#00C853" opacity="0.2" rx="1" />
                <rect x="48" y="15" width="10" height="6" fill="#00C853" opacity="0.2" rx="1" />
            </svg>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth-password-toggle.js" asp-append-version="true"></script>
}

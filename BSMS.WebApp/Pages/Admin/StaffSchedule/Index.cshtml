@page
@model IndexModel
@{
    ViewData["Title"] = "Staff Schedule Management";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Staff Schedule Management</h2>
            <p class="text-muted mb-0">Quản lý ca làm việc và phân công nhân viên</p>
        </div>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Phân công mới
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Staff Name</th>
                            <th>Station</th>
                            <th>Shift Time</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th>Assigned Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model.StaffAssignments)
                        {
                            var isWorking = Model.WorkingStatus.GetValueOrDefault(staff.StaffId);
                            
                            <tr class="@(staff.IsActive ? "" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (isWorking)
                                        {
                                            <span class="badge bg-success rounded-pill">
                                                <i class="bi bi-circle-fill" style="font-size:0.5rem;"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary rounded-pill">
                                                <i class="bi bi-circle" style="font-size:0.5rem;"></i>
                                            </span>
                                        }
                                        <div>
                                            <strong>@staff.User?.FullName</strong>
                                            <small class="d-block text-muted">@staff.User?.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <i class="bi bi-geo-alt text-primary me-1"></i>
                                    @staff.Station?.Name
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-clock"></i> @staff.ShiftTimeDisplay
                                    </span>
                                    @if (isWorking && staff.TimeRemainingInShift.HasValue)
                                    {
                                        <small class="text-muted d-block mt-1">
                                            Còn @staff.TimeRemainingInShift.Value.Hours giờ @staff.TimeRemainingInShift.Value.Minutes phút
                                        </small>
                                    }
                                </td>
                                <td>
                                    <small>@staff.ShiftDuration.Hours giờ</small>
                                </td>
                                <td>
                                    @if (staff.IsActive)
                                    {
                                        if (isWorking)
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis">
                                                <i class="bi bi-briefcase-fill me-1"></i>Đang làm việc
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning-subtle text-warning-emphasis">
                                                <i class="bi bi-moon-fill me-1"></i>Ngoài giờ
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger-emphasis">
                                            <i class="bi bi-x-circle-fill me-1"></i>Không hoạt động
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small>@staff.AssignedAt.ToLocalTime().ToString("dd/MM/yyyy")</small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Edit" asp-route-id="@staff.StaffId" 
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        
                                        <form method="post" asp-page-handler="ToggleActive" class="d-inline">
                                            <input type="hidden" name="staffId" value="@staff.StaffId" />
                                            <input type="hidden" name="isActive" value="@(!staff.IsActive)" />
                                            <button type="submit" 
                                                    class="btn btn-outline-@(staff.IsActive ? "warning" : "success")"
                                                    title="@(staff.IsActive ? "Tạm dừng" : "Kích hoạt")">
                                                <i class="bi bi-@(staff.IsActive ? "pause-circle" : "play-circle")"></i>
                                            </button>
                                        </form>
                                        
                                        <form method="post" asp-page-handler="Delete" class="d-inline" 
                                              onsubmit="return confirm('Bạn có chắc muốn xóa phân công này?');">
                                            <input type="hidden" name="staffId" value="@staff.StaffId" />
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.StaffAssignments.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-5">
                                    <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                                    Chưa có phân công nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh page every 60 seconds to update working status
        setTimeout(function() {
            location.reload();
        }, 60000);
    </script>
}
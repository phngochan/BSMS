@page
@model BSMS.WebApp.Pages.Admin.Payments.IndexModel
@using BSMS.BusinessObjects.Enums
@{
    ViewData["Title"] = "Quản lý giao dịch";

    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
    var currentPage = Model.PageIndex;
}

<div class="container py-4">

    <!-- PAGE HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-credit-card-2-front text-primary me-2"></i>@ViewData["Title"]
        </h2>

        <a asp-page="./Index"
           asp-route-userId="@Model.UserId"
           asp-route-start="@Model.Start?.ToString("yyyy-MM-dd")"
           asp-route-end="@Model.End?.ToString("yyyy-MM-dd")"
           asp-route-status="@Model.Status"
           asp-route-searchName="@Model.SearchName"
           asp-route-export="excel"
           class="btn btn-success btn-sm shadow-sm">
            <i class="bi bi-file-earmark-spreadsheet me-1"></i> Xuất Excel
        </a>
    </div>

    <!-- FILTER CARD -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-funnel me-1"></i> Bộ lọc
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Tìm user</label>
                    <input type="text" name="SearchName" class="form-control form-control-sm"
                           value="@Model.SearchName" placeholder="Tên hoặc ID" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="Start" class="form-control form-control-sm"
                           value="@(Model.Start?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="End" class="form-control form-control-sm"
                           value="@(Model.End?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="Status" class="form-select form-select-sm">
                        <option value="">Tất cả</option>
                        @foreach (var s in Enum.GetValues(typeof(PaymentStatus)).Cast<PaymentStatus>())
                        {
                            <option value="@s" selected="@(Model.Status == s)">
                                @s.GetDisplayName()
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-grid">
                    <label class="form-label invisible">Lọc</label>
                    <button class="btn btn-primary btn-sm"><i class="bi bi-search me-1"></i> Lọc</button>
                </div>
            </form>
        </div>
    </div>

    <!-- REVENUE CHART -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-graph-up-arrow me-1"></i> Doanh thu 30 ngày gần nhất</h5>
        </div>
        <div class="card-body">
            <canvas id="revenueChart" height="90"></canvas>
        </div>
    </div>

    <!-- TRANSACTION TABLE -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            @if (Model.Payments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 table-borderless align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="text-center">Mã GD</th>
                                <th>User</th>
                                <th class="text-end">Số tiền</th>
                                <th>Phương thức</th>
                                <th>Thời gian</th>
                                <th class="text-center">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Payments)
                            {
                                <tr class="table-row-hover">
                                    <td class="text-center fw-bold text-secondary">#@p.PaymentId</td>

                                    <td>
                                        <strong>@(p.User?.FullName ?? "User " + p.UserId)</strong>
                                        <div class="small text-muted">ID: @p.UserId</div>
                                    </td>

                                    <td class="text-end fw-bold text-success">@String.Format("{0:N0}", p.Amount) đ</td>

                                    <td>
                                        <span class="badge bg-info text-dark">@p.Method.GetDisplayName()</span>
                                    </td>

                                    <td class="text-muted">@p.PaymentTime</td>

                                    <td class="text-center">
                                        @switch (p.Status)
                                        {
                                            case PaymentStatus.Paid:
                                                <span class="badge bg-success px-3 py-2">Đã thanh toán</span>
                                                break;
                                            case PaymentStatus.Pending:
                                                <span class="badge bg-warning text-dark px-3 py-2">Chờ xử lý</span>
                                                break;
                                            case PaymentStatus.Failed:
                                                <span class="badge bg-danger px-3 py-2">Thất bại</span>
                                                break;
                                        }
                                    </td>

                                    @* <td class="text-center">
                                        @if (!string.IsNullOrEmpty(p.InvoiceUrl))
                                        {
                                            <a href="@p.InvoiceUrl" target="_blank"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-receipt"></i> Xem
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- PAGINATION -->
                <div class="d-flex justify-content-between align-items-center px-3 py-3 border-top bg-light">
                    <div class="small text-muted">
                        Hiển thị @(Model.Payments.Count) / @Model.TotalCount giao dịch
                    </div>

                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-all-route-data="@GetPageRouteData(currentPage - 1)">«</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-all-route-data="@GetPageRouteData(i)">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                            <a class="page-link" asp-all-route-data="@GetPageRouteData(currentPage + 1)">»</a>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-1"></i>
                    <p class="mt-3">Không có giao dịch nào.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private Dictionary<string, string> GetPageRouteData(int page)
    {
        return new Dictionary<string, string>
        {
            ["pageIndex"] = page.ToString(),
            ["userId"] = Model.UserId?.ToString() ?? "",
            ["start"] = Model.Start?.ToString("yyyy-MM-dd") ?? "",
            ["end"] = Model.End?.ToString("yyyy-MM-dd") ?? "",
            ["status"] = Model.Status?.ToString() ?? "",
            ["searchName"] = Model.SearchName ?? ""
        };
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart').getContext('2d');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.RevenueLabels)),
                datasets: [{
                    label: 'Doanh thu (đ)',
                    data: @Html.Raw(Json.Serialize(Model.RevenueData)),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#0d6efd',
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: ctx => ctx.parsed.y.toLocaleString('vi-VN') + ' đ'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: value => value.toLocaleString('vi-VN') + ' đ'
                        }
                    }
                }
            }
        });
    </script>

    <!-- SIGNALR LISTENER -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/paymentHub")
            .build();

        connection.on("PaymentUpdated", data => {
            const toast = document.createElement("div");
            toast.className = "alert alert-info position-fixed top-0 end-0 m-3 shadow";
            toast.innerHTML = `Có giao dịch mới #${data.paymentId}<br>Số tiền: ${data.amount}`;
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 4000);
            location.reload();
        });

        connection.start().catch(err => console.error(err));
    </script>
}

@page
@model BSMS.WebApp.Pages.Admin.Payments.IndexModel
@using BSMS.BusinessObjects.Enums
@{
    ViewData["Title"] = "Quản lý giao dịch";

    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
    var currentPage = Model.PageIndex;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-page="./Index"
           asp-route-userId="@Model.UserId"
           asp-route-start="@Model.Start?.ToString("yyyy-MM-dd")"
           asp-route-end="@Model.End?.ToString("yyyy-MM-dd")"
           asp-route-status="@Model.Status"
           asp-route-searchName="@Model.SearchName"
           asp-route-export="excel"
           class="btn btn-success btn-sm">
            <i class="bi bi-file-earmark-spreadsheet"></i> Xuất Excel
        </a>
    </div>

    <!-- FORM LỌC + TÌM KIẾM -->
    <form method="get" class="row g-3 mb-4 align-items-end">
        <div class="col-md-2">
            <label class="form-label">Tìm user</label>
            <input type="text" name="SearchName" class="form-control form-control-sm"
                   value="@Model.SearchName" placeholder="Tên hoặc ID" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Từ ngày</label>
            <input type="date" name="Start" class="form-control form-control-sm"
                   value="@(Model.Start?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Đến ngày</label>
            <input type="date" name="End" class="form-control form-control-sm"
                   value="@(Model.End?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Trạng thái</label>
            <select name="Status" class="form-select form-select-sm">
                <option value="">Tất cả</option>
                @foreach (var s in Enum.GetValues(typeof(PaymentStatus)).Cast<PaymentStatus>())
                {
                    <option value="@s" selected="@(Model.Status == s)">@s.GetDisplayName()</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary btn-sm w-100">Lọc</button>
        </div>
    </form>

    <!-- BIỂU ĐỒ DOANH THU -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Doanh thu 30 ngày gần nhất</h5>
        </div>
        <div class="card-body">
            <canvas id="revenueChart" height="100"></canvas>
        </div>
    </div>

    <!-- BẢNG GIAO DỊCH -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Payments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center" style="width: 60px;">ID</th>
                                <th>User</th>
                                <th class="text-end">Số tiền</th>
                                <th>Phương thức</th>
                                <th>Thời gian</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Hóa đơn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Payments)
                            {
                                <tr>
                                    <td class="text-center fw-bold">#@p.PaymentId</td>
                                    <td>
                                        <strong>@(p.User?.FullName ?? "User " + p.UserId)</strong>
                                        <br /><small class="text-muted">ID: @p.UserId</small>
                                    </td>
                                    <td class="text-end text-success fw-bold">@p.Amount đ</td>
                                    <td><span class="badge bg-info text-dark">@p.Method.GetDisplayName()</span></td>
                                    <td>@p.PaymentTime </td>
                                    <td class="text-center">
                                        @switch (p.Status)
                                        {
                                            case PaymentStatus.Paid:
                                                <span class="badge bg-success">Đã thanh toán</span>
                                                break;
                                            case PaymentStatus.Pending:
                                                <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                                break;
                                            case PaymentStatus.Failed:
                                                <span class="badge bg-danger">Thất bại</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(p.InvoiceUrl))
                                        {
                                            <a href="@p.InvoiceUrl" target="_blank" class="btn btn-sm btn-outline-primary">Xem</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- PHÂN TRANG -->
                <nav class="d-flex justify-content-between align-items-center p-3 border-top">
                    <div class="text-muted small">
                        Hiển thị @(Model.Payments.Count) / @Model.TotalCount giao dịch
                    </div>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-all-route-data="@GetPageRouteData(currentPage - 1)">«</a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-all-route-data="@GetPageRouteData(i)">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                            <a class="page-link" asp-all-route-data="@GetPageRouteData(currentPage + 1)">»</a>
                        </li>
                    </ul>
                </nav>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-1"></i>
                    <p class="mt-3">Không có giao dịch nào.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private Dictionary<string, string> GetPageRouteData(int page)
    {
        return new Dictionary<string, string>
        {
            ["pageIndex"] = page.ToString(),
            ["userId"] = Model.UserId?.ToString() ?? "",
            ["start"] = Model.Start?.ToString("yyyy-MM-dd") ?? "",
            ["end"] = Model.End?.ToString("yyyy-MM-dd") ?? "",
            ["status"] = Model.Status?.ToString() ?? "",
            ["searchName"] = Model.SearchName ?? ""
        };
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.RevenueLabels)),
                datasets: [{
                    label: 'Doanh thu (đ)',
                    data: @Html.Raw(Json.Serialize(Model.RevenueData)),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#0d6efd',
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: ctx => ctx.parsed.y.toLocaleString('vi-VN') + ' đ'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: value => value.toLocaleString('vi-VN') + ' đ'
                        }
                    }
                }
            }
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/paymentHub")
            .build();

        connection.on("PaymentUpdated", data => {
            console.log("Có thanh toán mới:", data);

            // Gợi ý: hiển thị thông báo popup nhỏ
            const toast = document.createElement("div");
            toast.className = "alert alert-info position-fixed top-0 end-0 m-3";
            toast.innerHTML = `Có giao dịch mới #${data.paymentId}<br>Số tiền: ${data.amount}`;
            document.body.appendChild(toast);

            setTimeout(() => toast.remove(), 4000);

            location.reload();
        });

        connection.start().catch(err => console.error(err));
    </script>

}
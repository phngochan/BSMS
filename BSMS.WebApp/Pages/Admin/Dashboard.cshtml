@page
@model BSMS.WebApp.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-3">
    <div class="mb-3">
        <h2 class="mb-1">Dashboard</h2>
        <p class="text-muted mb-0">Welcome back! Hereâ€™s your system overview.</p>
    </div>

    <!-- Top stats -->
    <div class="row g-3 row-cols-1 row-cols-md-2 row-cols-xl-4 mb-3">
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase small text-muted">Total Users</div>
                        <div class="display-6 fw-bold">@Model.TotalUsers</div>
                    </div>
                    <div class="text-primary"><i class="bi bi-people" style="font-size:2rem;"></i></div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase small text-muted">Active Stations</div>
                        <div class="display-6 fw-bold">@Model.TotalStations</div>
                    </div>
                    <div class="text-success"><i class="bi bi-ev-station" style="font-size:2rem;"></i></div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase small text-muted">Daily Transactions</div>
                        <div class="display-6 fw-bold">@Model.DailyTransactions</div>
                    </div>
                    <div class="text-info"><i class="bi bi-graph-up" style="font-size:2rem;"></i></div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase small text-muted">Revenue (This Month)</div>
                        <div class="display-6 fw-bold">$@Model.MonthlyRevenue.ToString("N0")</div>
                    </div>
                    <div class="text-warning"><i class="bi bi-currency-dollar" style="font-size:2rem;"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row g-3 mb-3">
        <div class="col-12 col-xl-6">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white border-0 pt-3">
                    <h6 class="mb-0">Weekly Transactions</h6>
                </div>
                <div class="card-body">
                    <canvas id="txChart" height="220"></canvas>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white border-0 pt-3">
                    <h6 class="mb-0">Daily Revenue</h6>
                </div>
                <div class="card-body">
                    <canvas id="revChart" height="220"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- System summaries -->
    <div class="row g-3 row-cols-1 row-cols-md-3">
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small text-muted">Uptime</div>
                            <div class="h4 mb-0">99.97%</div>
                        </div>
                        <i class="bi bi-cloud-check text-success" style="font-size:1.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small text-muted">Avg Response Time</div>
                            <div class="h4 mb-0">182 ms</div>
                        </div>
                        <i class="bi bi-speedometer2 text-info" style="font-size:1.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small text-muted">System Health</div>
                            <div class="h4 mb-0">Good</div>
                        </div>
                        <i class="bi bi-heart-pulse text-primary" style="font-size:1.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
    // Mock 7-day labels and data
    const labels = ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'];

    // Weekly Transactions (bar)
    const txCtx = document.getElementById('txChart');
    new Chart(txCtx, {
        type: 'bar',
        data: {
            labels,
            datasets: [{
                label: 'Transactions',
                data: [120, 98, 145, 160, 180, 130, 150],
                backgroundColor: 'rgba(0, 200, 83, 0.6)',
                borderColor: 'rgba(0, 200, 83, 1)',
                borderWidth: 1,
                borderRadius: 6,
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
                x: { grid: { display: false } }
            }
        }
    });

    // Daily Revenue (line)
    const revCtx = document.getElementById('revChart');
    new Chart(revCtx, {
        type: 'line',
        data: {
            labels,
            datasets: [{
                label: 'Revenue ($)',
                data: [320, 280, 360, 410, 450, 390, 470],
                borderColor: 'rgba(241, 196, 15, 1)',
                backgroundColor: 'rgba(241, 196, 15, 0.2)',
                tension: 0.35,
                fill: true,
                pointRadius: 4,
                pointBackgroundColor: 'rgba(241, 196, 15, 1)'
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
                x: { grid: { display: false } }
            }
        }
    });
</script>
}

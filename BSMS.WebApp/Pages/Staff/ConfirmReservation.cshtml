@page
@using BSMS.BusinessObjects.Enums
@using BSMS.WebApp.Helpers
@model BSMS.WebApp.Pages.Staff.ConfirmReservationModel
@{
    ViewData["Title"] = "Xác Nhận Đặt Chỗ";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i> Đặt Chỗ Đang Chờ
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush" id="pendingReservationsList">
                        @foreach (var res in Model.PendingReservations)
                        {
                            <a asp-page="/Staff/ConfirmReservation" asp-route-id="@res.ReservationId"
                               class="list-group-item list-group-item-action @(Model.Reservation?.ReservationId == res.ReservationId ? "active" : "")"
                               data-reservation-id="@res.ReservationId">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">#@res.ReservationId</h6>
                                        <p class="mb-1 small">@res.User?.FullName</p>
                                        <p class="mb-0 small text-muted">
                                            <i class="bi bi-clock"></i> @res.ScheduledTime.ToLocalDateTimeString()
                                        </p>
                                    </div>
                                    <span class="badge bg-success">@res.Status</span>
                                </div>
                            </a>
                        }
                    </div>
                    <div class="text-center py-4 @(Model.PendingReservations.Any() ? "d-none" : string.Empty)" id="noReservationState">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-2 mb-0">Không có đặt chỗ nào đang chờ</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Reservation != null)
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-calendar-check"></i> Thông Tin Đặt Chỗ
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Mã Đặt Chỗ</h6>
                                <p class="fs-4 fw-bold">#@Model.Reservation.ReservationId</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Trạng Thái</h6>
                                <span class="badge bg-@(Model.Reservation.Status == ReservationStatus.Active ? "success" : "secondary") fs-6">
                                    @Model.Reservation.Status
                                </span>
                            </div>
                        </div>

                        <hr>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Khách Hàng</h6>
                                <p class="mb-1"><strong>@Model.Reservation.User?.FullName</strong></p>
                                <p class="text-muted mb-0 small">@Model.Reservation.User?.Email</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Xe</h6>
                                <p class="mb-1"><strong>@Model.Reservation.Vehicle?.Vin</strong></p>
                                <p class="text-muted mb-0 small">Model: @Model.Reservation.Vehicle?.BatteryModel</p>
                            </div>
                        </div>

                        <hr>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Trạm</h6>
                                <p class="mb-1"><strong>@Model.Reservation.Station?.Name</strong></p>
                                <p class="text-muted mb-0 small">@Model.Reservation.Station?.Address</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Giờ Hẹn</h6>
                                <p class="mb-1"><strong>@Model.Reservation.ScheduledTime.ToLocalDateTimeString()</strong></p>
                                <p class="text-muted mb-0 small">Đã tạo: @Model.Reservation.CreatedAt.ToLocalDateTimeString()</p>
                            </div>
                        </div>

                        @if (Model.Reservation.Status == ReservationStatus.Active)
                        {
                            <hr>
                            <div class="mt-4">
                                <div class="d-grid gap-2">
                                    <a asp-page="/Staff/CompleteSwap" asp-route-id="@Model.Reservation.ReservationId" class="btn btn-success btn-lg w-100">
                                        <i class="bi bi-battery-charging"></i> Xác Nhận Đổi Pin
                                    </a>
                                    <form method="post" asp-page-handler="Cancel" class="mb-2">
                                        <input type="hidden" name="id" value="@Model.Reservation.ReservationId" />
                                        <button type="submit" class="btn btn-danger btn-lg w-100"
                                                onclick="return confirm('Bạn có chắc chắn muốn hủy đặt chỗ này?');">
                                            <i class="bi bi-x-circle"></i> Hủy Đặt Chỗ
                                        </button>
                                    </form>
                                    <a asp-page="/Staff/Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left"></i> Quay Lại
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <hr>
                            <div class="alert alert-info mt-4">
                                <i class="bi bi-info-circle"></i> Đặt chỗ này đã được xử lý. Trạng thái: @Model.Reservation.Status
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-page="/Staff/Index" class="btn btn-primary">
                                    <i class="bi bi-arrow-left"></i> Quay Lại Trang Chủ
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-info-circle fs-1 text-info mb-3"></i>
                        <h5>Chọn đặt chỗ để xác nhận</h5>
                        <p class="text-muted">Vui lòng chọn một đặt chỗ từ danh sách bên trái hoặc quét mã QR để xem chi tiết và xác nhận.</p>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-qr-code"></i> Quét mã QR từ khách hàng để truy cập nhanh
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



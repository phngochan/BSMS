@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const rejectModalEl = document.getElementById('rejectModal');
            if (rejectModalEl) {
                rejectModalEl.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const transferId = button.getAttribute('data-transfer-id');
                    const batteryId = button.getAttribute('data-battery-id');
                    
                    document.getElementById('rejectTransferId').value = transferId;
                    document.getElementById('rejectBatteryId').textContent = batteryId;
                    document.getElementById('rejectReason').value = '';
                });
            }

            const batteryDetailModalEl = document.getElementById('batteryDetailModal');
            if (batteryDetailModalEl) {
                batteryDetailModalEl.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    
                    const id = button.getAttribute('data-battery-id');
                    const model = button.getAttribute('data-battery-model');
                    const soh = parseFloat(button.getAttribute('data-battery-soh'));
                    const status = button.getAttribute('data-battery-status');
                    const station = button.getAttribute('data-battery-station');
                    const capacity = button.getAttribute('data-battery-capacity');
                    const updated = button.getAttribute('data-battery-updated');
                    const defect = button.getAttribute('data-battery-defect');
                    const maintenance = button.getAttribute('data-battery-maintenance');
                    
                    document.getElementById('detail-battery-id').textContent = id;
                    document.getElementById('detail-battery-model').textContent = model;
                    document.getElementById('detail-battery-capacity').textContent = capacity + ' mAh';
                    document.getElementById('detail-battery-soh').textContent = soh + '%';
                    document.getElementById('detail-battery-station').textContent = station;
                    document.getElementById('detail-battery-updated').textContent = updated;
                    document.getElementById('detail-battery-maintenance').textContent = maintenance;
                    
                    const sohBar = document.getElementById('detail-battery-soh-bar');
                    sohBar.style.width = soh + '%';
                    sohBar.setAttribute('aria-valuenow', soh);
                    
                    sohBar.className = 'progress-bar';
                    if (soh >= 80) {
                        sohBar.classList.add('bg-success');
                    } else if (soh >= 50) {
                        sohBar.classList.add('bg-warning');
                    } else {
                        sohBar.classList.add('bg-danger');
                    }
                    
                    const statusBadges = {
                        'Full': '<span class="badge bg-success text-white fs-5">Đầy</span>',
                        'Charging': '<span class="badge bg-info text-white fs-5">Đang sạc</span>',
                        'Taken': '<span class="badge bg-warning text-dark fs-5">Đã lấy</span>',
                        'Booked': '<span class="badge bg-primary text-white fs-5">Đã đặt</span>',
                        'Defective': '<span class="badge bg-danger text-white fs-5">Lỗi</span>'
                    };
                    document.getElementById('detail-battery-status').innerHTML = statusBadges[status] || status;
                    
                    const defectSection = document.getElementById('detail-defect-section');
                    if (defect && defect !== 'null' && defect.trim() !== '') {
                        document.getElementById('detail-battery-defect').textContent = defect;
                        defectSection.style.display = 'block';
                    } else {
                        defectSection.style.display = 'none';
                    }
                });
                
                batteryDetailModalEl.addEventListener('hidden.bs.modal', function () {
                    setTimeout(() => {
                        document.querySelectorAll('.modal-backdrop').forEach(backdrop => {
                            backdrop.remove();
                        });
                        
                        const openModals = document.querySelectorAll('.modal.show');
                        if (openModals.length === 0) {
                            document.body.classList.remove('modal-open');
                            document.body.style.overflow = '';
                            document.body.style.paddingRight = '';
                        }
                    }, 100);
                });
            }

            document.querySelectorAll('form[data-defect-form="true"]').forEach(form => {
                const select = form.querySelector('select[name="status"]');
                const reasonInput = form.querySelector('.defect-reason-input');
                if (!select || !reasonInput) return;

                const toggleReason = () => {
                    const isDefective = select.value === 'Defective';
                    reasonInput.classList.toggle('d-none', !isDefective);
                    reasonInput.required = isDefective;
                    if (!isDefective) {
                        reasonInput.value = '';
                    }
                };

                select.addEventListener('change', toggleReason);
                toggleReason();
            });
        });
    </script>
}


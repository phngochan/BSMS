                                        data-transfer-id="@transfer.TransferId"
                                        data-battery-id="@battery?.BatteryId">
                                    <i class="bi bi-x-circle me-1"></i>Từ chối
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

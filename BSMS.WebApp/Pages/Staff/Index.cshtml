@page
@model BSMS.WebApp.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Battery Swap Station Staff";
}

<link rel="stylesheet" href="~/css/ev-theme.css" />

<div class="container-fluid py-3">
    <!-- Battery Inventory: Summary cards -->
    <div class="row g-3 mb-3">
        <div class="col-12 col-md-4">
            <div class="card-ev p-3 h-100" style="border-left:6px solid #00C853;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="fw-bold text-ev-primary">Full Batteries</div>
                        <div class="fs-4 fw-bold">@Model.FullCount</div>
                    </div>
                    <div class="text-ev-primary" aria-hidden="true">
                        <i class="bi bi-battery-full" style="font-size:1.75rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card-ev p-3 h-100" style="border-left:6px solid #F1C40F;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="fw-bold" style="color:#C49600;">Charging</div>
                        <div class="fs-4 fw-bold">@Model.ChargingCount</div>
                    </div>
                    <div style="color:#F1C40F;" aria-hidden="true">
                        <i class="bi bi-lightning-charge" style="font-size:1.75rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card-ev p-3 h-100" style="border-left:6px solid #E74C3C;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="fw-bold" style="color:#B33A2D;">Maintenance</div>
                        <div class="fs-4 fw-bold">@Model.MaintenanceCount</div>
                    </div>
                    <div style="color:#E74C3C;" aria-hidden="true">
                        <i class="bi bi-tools" style="font-size:1.75rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Battery Inventory: Detailed table -->
    <div class="card-ev p-3">
        <div class="d-flex align-items-center justify-content-between mb-2">
            <h5 class="mb-0">Battery Inventory</h5>
            <div class="d-flex gap-2">
                <a class="btn btn-ev btn-sm" href="#"><i class="bi bi-arrow-repeat me-1"></i>Refresh</a>
                <a class="btn btn-ev-outline btn-sm" href="#"><i class="bi bi-download me-1"></i>Export</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Battery ID</th>
                        <th>Model</th>
                        <th>Capacity</th>
                        <th>SoH</th>
                        <th>Status</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var b in Model.Batteries)
                {
                    <tr>
                        <td>@b.BatteryId</td>
                        <td>@b.Model</td>
                        <td>@b.Capacity</td>
                        <td>@b.Soh%</td>
                        <td>
                            @if (b.Status == "Full")
                            {
                                <span class="badge" style="background-color:#00C853;">Full</span>
                            }
                            else if (b.Status == "Charging")
                            {
                                <span class="badge" style="background-color:#F1C40F; color:#2C3E50;">Charging</span>
                            }
                            else
                            {
                                <span class="badge" style="background-color:#E74C3C;">Maintenance</span>
                            }
                        </td>
                        <td>@b.LastUpdated.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

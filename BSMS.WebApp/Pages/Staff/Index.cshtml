@{
    ViewData["Title"] = "Station Operations";
}

@functions {
    public static string GetBatteryBadgeClass(BatteryStatus status) => status switch
    {
        BatteryStatus.Full => "badge bg-success text-white fw-semibold",
        BatteryStatus.Charging => "badge bg-info text-white fw-semibold",
        BatteryStatus.Taken => "badge bg-warning text-dark fw-semibold",
        BatteryStatus.Booked => "badge bg-primary text-white fw-semibold",
        BatteryStatus.Defective => "badge bg-danger text-white fw-semibold",
        _ => "badge bg-secondary text-white fw-semibold"
    };

    public static string GetSupportBadgeClass(SupportStatus status) => status switch
    {
        SupportStatus.Open => "badge bg-danger text-white fw-semibold",
        SupportStatus.InProgress => "badge bg-warning text-dark fw-semibold",
        SupportStatus.Closed => "badge bg-success text-white fw-semibold",
        _ => "badge bg-secondary text-white fw-semibold"
    };

    public static string FormatRelativeTime(DateTime timestamp)
    {
        var local = timestamp.Kind switch
        {
            DateTimeKind.Utc => timestamp.ToLocalTime(),
            DateTimeKind.Unspecified => DateTime.SpecifyKind(timestamp, DateTimeKind.Local),
            _ => timestamp
        };

        var span = DateTime.Now - local;
        if (span.TotalMinutes < 1)
        {
            return "just now";
        }

        if (span.TotalHours < 1)
        {
            return $"{Math.Floor(span.TotalMinutes)}m ago";
        }

        if (span.TotalDays < 1)
        {
            return $"{Math.Floor(span.TotalHours)}h ago";
        }

        return $"{Math.Floor(span.TotalDays)}d ago";
    }

    public static string FormatDuration(TimeSpan span)
    {
        if (span.TotalHours >= 1)
        {
            return $"{Math.Floor(span.TotalHours)}h {span.Minutes}m";
        }

        return $"{span.Minutes}m";
    }

    public static bool RequiresSlaAttention(Support ticket)
    {
        var age = DateTime.UtcNow - ticket.CreatedAt;
        return ticket.Status != SupportStatus.Closed && age > TimeSpan.FromMinutes(45);
    }

    public static string FormatTimeRemaining(TimeSpan span)
    {
        if (span <= TimeSpan.Zero)
        {
            return "Handover now";
        }

        if (span.TotalHours >= 1)
        {
            return $"{Math.Floor(span.TotalHours)}h {span.Minutes}m remaining";
        }

        return $"{span.Minutes}m remaining";
    }
}

<div class="container-fluid py-3">
    <h2 class="fw-bold mb-3">Station staff workspace</h2>
    @if (!Model.HasStation)
    {
        <div class="alert alert-warning">
            <strong>No assignment yet.</strong> Please ask an admin to assign you to a swap station before using these tools.
        </div>
    }
    else
    {
        @if (Model.ShiftInfo != null)
        {
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                        <div>
                            <p class="text-uppercase text-muted small mb-1">Current shift</p>
                            <h3 class="fw-bold mb-1">@Model.ShiftInfo.ShiftName</h3>
                            <small class="text-muted">@Model.ShiftInfo.Window · @Model.ShiftInfo.StationName</small>
                        </div>
                        <div class="text-md-end mt-3 mt-md-0">
                            <span class="badge bg-success-subtle text-success-emphasis mb-1">
                                <i class="bi bi-clock-history me-1"></i>Since @Model.ShiftInfo.ShiftStart.ToString("dd/MM HH:mm")
                            </span>
                            <div class="small text-muted">@FormatTimeRemaining(Model.ShiftInfo.TimeRemaining)</div>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height:6px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width:@Model.ShiftInfo.ProgressPercent.ToString("0.##")%;" aria-valuenow="@Model.ShiftInfo.ProgressPercent.ToString("0.##")" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="row mt-3 g-3">
                        <div class="col-12 col-md-7">
                            <p class="text-muted small mb-2">Focus items</p>
                            <ul class="list-unstyled mb-0 small">
                                @foreach (var item in Model.ShiftInfo.Checklist)
                                {
                                    <li class="d-flex align-items-start gap-2 mb-1">
                                        <i class="bi bi-check2-circle text-success mt-1"></i>
                                        <span>@item</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="col-12 col-md-5">
                            <div class="border rounded-3 p-3 h-100 bg-light-subtle">
                                <p class="text-muted small mb-1">Assignment</p>
                                <div class="fw-semibold">@Model.StationInfo?.Name</div>
                                <small class="text-muted">Assigned since @Model.ShiftInfo.AssignedAtLocal.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row g-3 mb-4">
            @foreach (var status in Enum.GetValues(typeof(BSMS.BusinessObjects.Enums.BatteryStatus)).Cast<BSMS.BusinessObjects.Enums.BatteryStatus>())
            {
                var count = Model.BatterySummary.TryGetValue(status, out var value) ? value : 0;
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <p class="text-muted text-uppercase small mb-1">@status</p>
                            <div class="fs-3 fw-semibold">@count</div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row g-4">
            <div class="col-12 col-xl-8">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Battery inventory at @Model.StationInfo?.Name</h5>
                                <small class="text-muted">Update each battery status directly.</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Battery ID</th>
                                        <th>Model</th>
                                        <th>SoH</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var battery in Model.Batteries)
                                    {
                                        <tr>
                                            <td>#@battery.BatteryId</td>
                                            <td>@battery.Model</td>
                                            <td>@battery.Soh %</td>
                                        <td>
                                            <div class="d-flex flex-column gap-2">
                                                <span class="@GetBatteryBadgeClass(battery.Status)">@battery.Status</span>
                                                @if (!string.IsNullOrWhiteSpace(battery.DefectNote))
                                                {
                                                    <small class="text-danger fst-italic">Reason: @battery.DefectNote</small>
                                                }
                                                <form method="post" asp-page-handler="UpdateBatteryStatus" class="d-flex flex-column gap-2 align-items-start align-items-md-center flex-md-row" data-defect-form="true">
                                                    <input type="hidden" name="batteryId" value="@battery.BatteryId" />
                                                    <select name="status" class="form-select form-select-sm" style="min-width:150px;">
                                                        @foreach (var option in Model.GetSelectableStatuses(battery.Status))
                                                        {
                                                            <option value="@option.Value" selected="@(option.Selected)">@option.Text</option>
                                                        }
                                                    </select>
                                                    <input type="text"
                                                           name="defectReason"
                                                           class="form-control form-control-sm defect-reason-input d-none"
                                                           style="min-width:200px;"
                                                           value="@battery.DefectNote"
                                                           placeholder="Reason for defect" />
                                                    <button class="btn btn-sm btn-outline-primary" type="submit">Save</button>
                                                </form>
                                            </div>
                                        </td>
                                            <td class="text-muted small">@battery.UpdatedAt.ToLocalTime().ToString("dd/MM HH:mm")</td>
                                        </tr>
                                    }
                                    @if (!Model.Batteries.Any())
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted py-4">No batteries in this station yet.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xl-4">
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body">
                        <h5 class="mb-1">Station information</h5>
                        <p class="text-muted mb-3">@Model.StationInfo?.Address</p>
                        <ul class="list-unstyled mb-0">
                            <li>Capacity: <strong>@Model.StationInfo?.Capacity</strong></li>
                            <li>Status: <strong>@Model.StationInfo?.Status</strong></li>
                        </ul>
                    </div>
                </div>
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Swap workflow</h5>
                            <span class="badge bg-primary-subtle text-primary-emphasis">Last 12 swaps</span>
                        </div>
                        <p class="text-muted small mt-1 mb-0">Theo dõi luồng công việc và chốt giao dịch đang Pending trực tiếp tại đây.</p>
                        <div class="d-flex flex-wrap gap-2 mt-3">
                            @foreach (var kv in Model.SwapWorkflow.StatusCounts.OrderBy(k => k.Key))
                            {
                                <span class="badge rounded-pill bg-light text-muted border">
                                    @kv.Key: <strong class="ms-1">@kv.Value</strong>
                                </span>
                            }
                        </div>
                        <div class="mt-3">
                            @foreach (var step in Model.SwapWorkflow.Steps)
                            {
                                var stateClass = step.IsCompleted
                                    ? "bg-success text-white"
                                    : step.IsActive
                                        ? "bg-warning text-dark"
                                        : "bg-light text-muted";
                                <div class="d-flex align-items-start gap-3 mb-2">
                                    <div class="rounded-circle @stateClass d-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                                        <i class="bi @(step.IsCompleted ? "bi-check" : "bi-chevron-right")"></i>
                                    </div>
                                    <div>
                                        <strong>@step.Title</strong>
                                        <div class="text-muted small">@step.Description</div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-4">
                            <p class="text-muted small mb-2">Recent activity</p>
                            @if (Model.SwapWorkflow.Timeline.Any())
                            {
                                <ul class="list-unstyled small mb-0">
                                    @foreach (var log in Model.SwapWorkflow.Timeline)
                                    {
                                        <li class="mb-3">
                                            <div class="d-flex justify-content-between gap-3 flex-wrap">
                                                <div>
                                                    <strong>#@log.TransactionId</strong> · @log.Status
                                                    <div class="text-muted">@log.RiderName · @log.Vehicle</div>
                                                </div>
                                                <span class="text-muted">@FormatRelativeTime(log.SwapTime)</span>
                                            </div>
                                            @if (log.Status == SwapStatus.Pending)
                                            {
                                                <form method="post"
                                                      asp-page-handler="HandleSwapAction"
                                                      class="d-flex flex-wrap gap-2 mt-2 align-items-center">
                                                    <input type="hidden" name="transactionId" value="@log.TransactionId" />
                                                    <div class="small text-muted me-1">Action:</div>
                                                    <button type="submit"
                                                            name="status"
                                                            value="Completed"
                                                            class="btn btn-success btn-sm">
                                                        <i class="bi bi-check2 me-1"></i>Complete
                                                    </button>
                                                    <button type="submit"
                                                            name="status"
                                                            value="Cancelled"
                                                            class="btn btn-outline-warning btn-sm">
                                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                                    </button>
                                                </form>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="text-muted small fst-italic">No swap activity recorded yet.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Station support tickets</h5>
                        <small class="text-muted">Keep riders informed by updating progress.</small>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-danger-subtle text-danger-emphasis">Open: @Model.SupportSummary.Open</span>
                        <span class="badge bg-warning-subtle text-warning-emphasis">In progress: @Model.SupportSummary.InProgress</span>
                        <span class="badge bg-success-subtle text-success-emphasis">Closed: @Model.SupportSummary.Closed</span>
                        <span class="badge bg-secondary-subtle text-secondary-emphasis">Total: @Model.SupportSummary.Total</span>
                        @if (Model.SupportSummary.OldestActiveAge.HasValue)
                        {
                            <span class="badge bg-light text-muted border">Oldest active: @FormatDuration(Model.SupportSummary.OldestActiveAge.Value)</span>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Customer</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Age</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model.SupportTickets)
                                {
                                    <tr>
                                        <td>@ticket.SupportId</td>
                                        <td>@ticket.User?.FullName</td>
                                        <td>@ticket.Type</td>
                                        <td>@ticket.Description</td>
                                        <td>
                                            <div>@FormatRelativeTime(ticket.CreatedAt)</div>
                                            @if (RequiresSlaAttention(ticket))
                                            {
                                                <span class="badge bg-danger-subtle text-danger-emphasis mt-1">SLA risk</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="@GetSupportBadgeClass(ticket.Status)">@ticket.Status</span>
                                        </td>
                                        <td class="text-end">
                                            <form method="post"
                                                  asp-page-handler="ProcessSupport"
                                                  class="d-flex flex-column flex-sm-row gap-2 align-items-sm-center">
                                                <input type="hidden" name="supportId" value="@ticket.SupportId" />
                                                <select name="status"
                                                        class="form-select form-select-sm support-status-select"
                                                        style="min-width:140px;">
                                                    @if (ticket.Status == SupportStatus.Open)
                                                    {
                                                        <option value="Open" selected disabled>Open</option>
                                                    }
                                                    <option value="InProgress" selected="@ticket.Status == SupportStatus.InProgress">InProgress</option>
                                                    <option value="Closed" selected="@ticket.Status == SupportStatus.Closed">Closed</option>
                                                </select>
                                                <button class="btn btn-sm btn-outline-primary" type="submit">Update</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.SupportTickets.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">No tickets yet.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('form[data-defect-form="true"]').forEach(form => {
                const select = form.querySelector('select[name="status"]');
                const reasonInput = form.querySelector('.defect-reason-input');
                if (!select || !reasonInput) return;

                const toggleReason = () => {
                    const isDefective = select.value === 'Defective';
                    reasonInput.classList.toggle('d-none', !isDefective);
                    reasonInput.required = isDefective;
                    if (!isDefective) {
                        reasonInput.value = '';
                    }
                };

                select.addEventListener('change', toggleReason);
                toggleReason();
            });

        });
    </script>
}

            <div class="list-group list-group-flush">
                @foreach (var transfer in Model.IncomingTransfers)
                {
                    var battery = transfer.Battery;
                    var fromStation = transfer.FromStation?.Name ?? $"Trạm #{transfer.FromStationId}";
                    var timeRemaining = transfer.TransferTime - DateTime.UtcNow;
                    var isOverdue = timeRemaining < TimeSpan.Zero;
                    
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <h6 class="mb-0">Pin #@battery?.BatteryId - @battery?.Model</h6>
                                    <span class="badge bg-light text-dark border">SoH: @battery?.Soh%</span>
                                </div>
                                <div class="small text-muted">
                                    <div>
                                        <i class="bi bi-geo-alt me-1"></i>
                                        Từ: <strong>@fromStation</strong>
                                    </div>
                                    <div>
                                        <i class="bi bi-clock me-1"></i>
                                        Dự kiến: @transfer.TransferTime.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        @if (isOverdue)
                                        {
                                            <span class="badge bg-danger text-white ms-2">Quá hạn</span>
                                        }

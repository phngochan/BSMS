@page "{id:int}"
@using BSMS.BusinessObjects.Enums
@using BSMS.WebApp.Helpers
@model BSMS.WebApp.Pages.Staff.CompleteSwapModel
@{
    ViewData["Title"] = "Xác Nhận Đổi Pin";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Reservation != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-battery-charging"></i> Xác Nhận Đổi Pin
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Mã Đặt Chỗ</h6>
                                <p class="fs-4 fw-bold">#@Model.Reservation.ReservationId</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Khách Hàng</h6>
                                <p class="mb-0"><strong>@Model.Reservation.User?.FullName</strong></p>
                                <p class="text-muted mb-0 small">@Model.Reservation.User?.Email</p>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Xe</h6>
                                <p class="mb-1"><strong>VIN: @Model.Reservation.Vehicle?.Vin</strong></p>
                                <p class="text-muted mb-0 small">Model: @Model.Reservation.Vehicle?.BatteryModel</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Trạm</h6>
                                <p class="mb-1"><strong>@Model.Reservation.Station?.Name</strong></p>
                                <p class="text-muted mb-0 small">@Model.Reservation.Station?.Address</p>
                            </div>
                        </div>

                        <hr>

                        @if (Model.CurrentBattery != null)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> 
                                <strong>Pin hiện tại của khách hàng:</strong> Pin #@Model.CurrentBattery.BatteryId 
                                (Model: @Model.CurrentBattery.Model, SOH: @Model.CurrentBattery.Soh%)
                            </div>
                        }

                        <form method="post">
                            <input type="hidden" name="id" value="@Model.Reservation.ReservationId" />

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="BatteryTakenId" class="form-label">
                                        <i class="bi bi-arrow-down-circle text-success"></i> Pin Giao (Đã được Booked) <span class="text-danger">*</span>
                                    </label>
                                    @if (Model.AvailableBatteries.Any())
                                    {
                                        <select asp-for="BatteryTakenId" class="form-select" required>
                                            @foreach (var battery in Model.AvailableBatteries)
                                            {
                                                <option value="@battery.BatteryId" selected="@(Model.BatteryTakenId == battery.BatteryId)">
                                                    Pin #@battery.BatteryId - @battery.Model (SOH: @battery.Soh%, Status: @battery.Status)
                                                </option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" value="Không có pin được book" readonly />
                                        <input type="hidden" asp-for="BatteryTakenId" />
                                    }
                                    <span asp-validation-for="BatteryTakenId" class="text-danger"></span>
                                    <small class="form-text text-muted">Pin đã được đặt chỗ cho reservation này</small>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="BatteryReturnedId" class="form-label">
                                        <i class="bi bi-arrow-up-circle text-warning"></i> Pin Nhận (Từ khách hàng) <span class="text-danger">*</span>
                                    </label>
                                    @if (Model.CurrentBattery != null)
                                    {
                                        <input type="hidden" asp-for="BatteryReturnedId" value="@Model.CurrentBattery.BatteryId" />
                                        <input type="text" class="form-control" value="Pin #@Model.CurrentBattery.BatteryId - @Model.CurrentBattery.Model (SOH: @Model.CurrentBattery.Soh%)" readonly />
                                        <small class="form-text text-muted">Pin hiện tại của khách hàng</small>
                                    }
                                    else
                                    {
                                        <input type="number" asp-for="BatteryReturnedId" class="form-control" placeholder="Nhập ID pin nhận từ khách hàng" required />
                                        <span asp-validation-for="BatteryReturnedId" class="text-danger"></span>
                                        <small class="form-text text-muted">Nhập ID pin mà khách hàng trả lại</small>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="bi bi-info-circle text-info"></i> Trạng Thái Pin Cũ (Pin Nhận) <span class="text-danger">*</span>
                                </label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="ReturnedBatteryStatus" value="Charging" id="statusCharging" checked>
                                    <label class="form-check-label" for="statusCharging">
                                        <i class="bi bi-battery-charging text-success"></i> Charging (Sạc lại)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="ReturnedBatteryStatus" value="Defective" id="statusDefective">
                                    <label class="form-check-label" for="statusDefective">
                                        <i class="bi bi-exclamation-triangle text-danger"></i> Defective (Hỏng - Cần bảo trì)
                                    </label>
                                </div>
                                <small class="form-text text-muted">Chọn trạng thái cho pin cũ mà khách hàng trả lại</small>
                            </div>

                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Lưu ý:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Kiểm tra lại <strong>Trạng thái pin</strong> trước khi xác nhận</li>
                                </ul>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a asp-page="/Staff/ConfirmReservation" asp-route-id="@Model.Reservation.ReservationId" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Quay Lại
                                </a>
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle"></i> Xác Nhận Đổi Pin
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    Không tìm thấy đặt chỗ.
                </div>
                <a asp-page="/Staff/ConfirmReservation" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay Lại
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

